---
import type { IProgramListData } from "../libs/type.d.ts"
import Arrow from "./icons/Arrow.astro"

interface Props {
	ProgramListData :IProgramListData
}

const {ProgramListData} = Astro.props
const {head, list, btn} = ProgramListData
--- 

<section class="incluye gradient-bg py-32">
  <div class="2xl:max-w-screen-xl xl:max-w-screen-xl lg:max-w-screen-lg md:max-w-screen-md max-w-screen-sm m-auto flex">
    <h2 class="w-1/3 text-5xl text-[color:var(--accent)] font-medium">{head.first} <span class="block">{head.second}</span></h2>
    <div class="w-2/3">
      <ul class="mb-10">
        {list?.map(item => (
        <li>
          <div class="flex items-center gap-5 py-4">
            <Arrow /><p class="text-xl lora">{item}</p>
          </div>
          <hr class="border-t-[1px] border-[var(--accent)]  text-[color:var(--acccent)] " />
        </li>
        ))}
      </ul>
      <button class="center py-2 px-12 rounded-full bg-[var(--accent)] text-white font-bold">{btn}</button>
    </div>
  </div>
</section>

<style>
  .gradient-bg {
    background: var(--accent-gradient);
  }
</style>
