---
import type { IProgramListData } from "../libs/type.d.ts"
import Arrow from "./icons/Arrow.astro"

interface Props {
	ProgramListData :IProgramListData
}

const {ProgramListData} = Astro.props
const {head, list, btn} = ProgramListData
--- 

<section class="incluye gradient-bg py-16 md:py-32">
  <div class="2xl:max-w-screen-xl xl:max-w-screen-xl lg:max-w-screen-lg md:max-w-screen-md max-w-screen-sm m-auto flex flex-col md:flex-row px-6 animation">
    <h2 class="md:w-1/3 w-full lg:text-5xl sm:text-4xl text-5xl text-[color:var(--accent)] font-medium mb-6 leading-none">{head.first} <span class="block">{head.second}</span></h2>
    <div class="md:w-2/3 w-full">
      <ul class="mb-10">
        {list?.map((item, index) => (
        <li>
          <div class="flex items-center gap-5 py-4">
            <Arrow /><p class="text-xl lora max-w-[80%] ">{item}</p>
          </div>
          {index !== list.length -1 && <hr class="border-t-[1px] border-[var(--accent)]  text-[color:var(--acccent)] " />}
        </li>
        ))}
      </ul>
      <button data-id="openModal" class="center md:w-auto w-full py-2 px-12 rounded-full bg-[var(--accent)] text-white font-bold">{btn}</button>
    </div>
  </div>
</section>

<style>
  .gradient-bg {
    background: var(--accent-gradient);
  }
</style>
